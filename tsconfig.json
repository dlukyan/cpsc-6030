{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["DOM", "ESNext"],
    "jsx": "react",
    "noEmit": false,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    "outDir": "build",
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*"],
  "files": ["./src/index.d.ts"]
}
